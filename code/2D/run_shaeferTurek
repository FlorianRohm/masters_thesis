#!/bin/bash

set -m # Enable Job Control

sizes=("50" "45" "40" "35" "30" "28" "26" "24" "22" "20" "18" "16" "14" "12" "10" "9" "8" "7" "6" "5" "4" "3")

methods=('\ ' '-c')

for size in ${sizes[@]}
do
  for method in ${methods[@]}
  do
    while [ "$(jobs | wc -l)" -ge 7 ]
    do
      sleep 5
    done
    ./schaeferTurek.py -s $size -r 100 $method &
  done
done
while [ 1 ]
do
  fg &> /dev/null
  [ $? == 1 ] && break
  sleep 1
done
